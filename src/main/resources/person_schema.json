{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Person as an object JSON schema.  Validate against person.json",

  "type": "object",
  "properties": {
    "person": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "age": {
          "type": "integer",
          "minimum": 18
        },
        "job": {
          "type": "string"
        }
      },
      "required": ["name", "job"],
      "additionalProperties": false
    }
  },
  "required": ["person"],
  "additionalProperties": false
}
