{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "person": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "age": {
          "type": "integer",
          "minimum": 18
        },
        "job": {
          "type": "string"
        }
      },
      "required": ["name", "job"]
    }
  }
}
