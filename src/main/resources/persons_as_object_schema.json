{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "A persons object containing an array of person objects JSON schema."
  "title": "Validate against persons_as_object.json",

  "type": "object",
  "properties": {
    "persons": {
      "type": "array",
      "minItems": 3,
      "maxItems": 10,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "person": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "minLength": 2, "maxLength": 30 },
              "age":  {"description": "Age in years", "type": "integer", "minimum": 18, "maximum": 150},
              "job":  { "type": "string", "pattern": "^[A-Za-z0-9]+$" }
            },
            "required": ["name", "job"],
            "additionalProperties": false
          }
        },
        "required": ["person"],
        "additionalProperties": false
      }
    }
  }
}
